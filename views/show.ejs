<%- include('partials/header'); %>

<div class="ui main text container segment">
      <div class="ui  header"><h1><%= blog.title %></h1></div>
      <div class="ui top attached"> 
        <img src="<%= blog.image %>" alt="" class="ui centered rounded large image">
        <span><%= blog.created.toDateString() %></span>
        <p><%= blog.body %></p>
        
        <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST" id="delete" >
        <button class="ui inverted red big button">Delete</button>
        </form>
        
        <a href="/blogs/<%= blog._id %>/edit" class="ui inverted orange big button">Edit</a>
    </div>   
</div>


<%- include('partials/footer'); %>